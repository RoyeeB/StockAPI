<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp">

    <EditText
        android:id="@+id/stock_EDT_symbol"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:hint="Enter Stock Symbol"
        android:inputType="text"
        android:background="@android:drawable/editbox_background"
        android:textColor="#333333"
        android:textSize="18sp"
        android:elevation="4dp"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/search_BTN_main" />

    <Button
        android:id="@+id/search_BTN_main"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:backgroundTint="#2196F3"
        android:elevation="4dp"
        android:text="Search"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stocksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_below="@id/stock_EDT_symbol"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:paddingTop="8dp" />
</RelativeLayout>
